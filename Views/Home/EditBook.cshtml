@model WaterMS.Models.Books
@{
    ViewData["Title"] = "Edit";
}
@{ string id = Model.BooksID;};
<h1>Edit</h1>
<div class="container" style="padding-top:25px; color:black;">
    <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.BooksID, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.BooksID)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.user.UsersID, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.user.UsersID)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.name, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.name)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.author, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.author)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.isbn_number, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.isbn_number)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.url, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.url)
                </div>
            </div>
            <button class=" btn btn-primary btn-sm" asp-controller="Home" asp-action="Update" asp-route-id="@id">Update</button>

    </div>
</div>