@model WaterMS.Models.Books
@{
    ViewData["Title"] = "Delete";
}

<h1>Book Details</h1>
<h3>Are you sure you want to delete this book?</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>User ID</th>
            <th>First Name</th>
            <th>Title of the Book</th>
            <th>Aurthor</th>
            <th>ISBN NUMBER</th>
            <th>URL</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.user.Book)
        {
            
        <tr>
            <td>@Html.DisplayFor(modelItem => item.user.UsersID)</td>
            <td> @Html.DisplayFor(modelItem => item.user.first_name)</td>
            <td> @Html.DisplayFor(modelItem => item.name)</td>
            <td>
                @Html.DisplayFor(modelItem => item.isbn_number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.url)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td><br />
            <button class="btn btn-primary btn-sm "><a asp-controller="Home" asp-action="DeleteConfirmed" asp-route-id="@item.BooksID" style="color:black">Delete</a></button><br />
        </tr>
        }
    </tbody>
    </table>

